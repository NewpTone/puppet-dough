[app:main]
paste.app_factory = dough.service.rest_api_service:user_service_app_factory

[app:dough_admin]
paste.app_factory = dough.service.rest_api_service:admin_service_app_factory

[composite:dough_user_composite]
use = call:dough.service.rest_api_service:user_pipeline_factory
keystone = faultwrap auth main

[composite:dough_admin_composite]
use = call:dough.service.rest_api_service:admin_pipeline_factory
keystone = faultwrap adminauth dough_admin

[filter:auth]
paste.filter_factory = keystone.middleware.auth_token:filter_factory
auth_host = <%=auth_host%>
auth_port = 35357
auth_protocol = http
admin_token = <%=admin_token%>

[filter:faultwrap]
paste.filter_factory = dough.middleware:FaultWrapper.factory

[filter:adminauth]
paste.filter_factory = dough.middleware.auth_admin_token:AdminAuth.factory
